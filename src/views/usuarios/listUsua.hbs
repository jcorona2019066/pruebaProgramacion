{{!-- Vista de todos los usuarios ingresados excepto uno mismo, 
    junto con botones para realizar una accion como: Eliminar y modificar su perfil  --}}
<body class="fondo4">
<div class="container p-4">
    <div class="row">
        <div class="card-header ">
          <h1 class="text-white text-center ">Usuarios</h1>
        </div>
        {{#each usuario}}
            <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a >
                        <h3 class="card-title text-uppercase">
                            {{username}}
                        </h3>
                    </a>
                    <p class="m-2"> {{dpi}} {{correo}} {{rol}} </p>
                    
                                          
                    <a class="btn btn-danger" href="/usuarios/delete/{{codigoUsuario}}">
                        Eliminar
                    </a>
                    <a class="btn btn-secondary" href="/usuarios/edit/{{codigoUsuario}}">
                        Editar
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay ningun usuario ingresado</p>
                <a >Ingresa un usuario</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
</body>